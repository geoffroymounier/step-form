      {
        "label" : "role",
        "id":"role",
        "field":"input",
        "required":false,
        "placeholder":""
      },
      {
        "label" : "email",
        "id":"email",
        "field":"input",
        "required":true,
        "placeholder":"",
        "extraProps" : {
          "type":"email",
          "regex": "^([a-zA-Z0-9_\\-\\.]+)@([a-zA-Z0-9_\\-\\.]+)\\.([a-zA-Z]{2,5})$",
          "regexError": "this is not a valid email"
        }
      },
      {
        "label" : "password",
        "id":"password",
        "required":true,
        "field":"input",
        "extraProps" : {
          "type":"password",
          "regex" : "(?=^.{8,}$)(?=.*[a-z])(?=.*[A-Z])(?!.*\\s).*$",
          "regexError" : "Password must have more than 9 characters, with at least one number, one uppercase and one lowercase character"
        }
      }
    ]
  },
